<?xml version="1.0" encoding="utf-8"?>

<level>

<!--
 Default values :
  <background
    resource=""       => need to specify !
    sizeFactorX="1.0" => must be >= 1.0
    sizeFactorY="1.0" => must be >= 1.0
    width="512"       => if both specified, one of the size factors will not be considered, depending on "ratio"
    height="512"
    ratio="width"     => must be "width" or "height" ( default : "width" )
  />
  -->
<!-- !!!! TODO: check background size/ratio !!!! -->
  <background
    resource="@drawable/background_sewage"
    sizeFactorX="1.0"
    sizeFactorY="2.0"
    width="512"
    height="512"
    ratio="width"
  />

  <layerMain
    tilesheet="@drawable/sewage"
    tileWidth="60"
    tileHeight="20"
    resource="@raw/level_0_1_bkg_1"
    collisionResource="@raw/level_0_1_coll"
    objectsResource="@raw/level_0_1_obj"
    hotspotsResource="@raw/level_0_1_hots__converted"
  />

<!--
 Default values :
  <layer
    tilesheet="@drawable/tilesheet"
    tileWidth="32"
    tileHeight="32"
    resource="@raw/layer"
    foreground="false"
    sizeFactorX="1.0" => must be > 0.0
    sizeFactorY="1.0" => must be > 0.0
    movingSpeedX="0.0"
    movingSpeedY="0.0"
  />
  -->
  <layer
    tilesheet="@drawable/titletileset"
    tileWidth="60"
    tileHeight="20"
    resource="@raw/level_0_1_bkg_2"
  />

  <dialogs
    resource="@xml/level_0_1_dialogs"
  />

</level>
